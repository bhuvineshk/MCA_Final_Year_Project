@page
@model InsuraNex.Pages.Admin.Data.ListModel
@{
}

<style>
    #tr{
        color: black;
        background-color: lightcoral;
        font-weight: bold;
        text-align: center;
        font-weight: 900;
    }

    tbody
    {
        color: black;
        background-color:lightblue ;
        font-weight: normal;
        font-weight: 475;
        font-size: 2.5em;
        font-family:'Times New Roman', Times, serif;
        text-align: center
    }

    button {
        background-color: lightgreen; /* Green */
        border: outset;
        color: black;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
    }
        </style>

<div class="bg-secondary bg-opacity-10 mb-5 py-3">
    <div class="container ">
        <h1>List of Customer Data</h1>
    </div>
</div>

<partial name="_Notification">

    @if (Model.Customers != null)
    {
        <div class="container" method="get">
            <table class="table-bordered col-md-9">
                <caption>List of users</caption>
                <thead>
                    <tr class="text-center" id="tr">
                        <td>Name</td>
                        <td>DOB</td>
                        <td>Plan</td>
                        <td> </td>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model.Customers)
                    {
                        <tr>

                            <td>
                                <a href="/Admin/Data/View/@customer.Id">
                                    @customer.Name
                                </a>
                            </td>
                            <td>@customer.DOB.Date.ToShortDateString()</td>
                            <td>@customer.Plan</td>
                            <td>   <button><a href="/Admin/Data/View/@customer.Id" >View</a></button></td>

                        </tr>
                    }

                </tbody>
            </table>

        </div>
    }

    else
    {
        <div class="container">

            <h1>Customer Data not available</h1>
        </div>
    }
