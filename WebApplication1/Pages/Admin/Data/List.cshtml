@page
@model InsuraNex.Pages.Admin.Data.ListModel
@{
}



<div class="bg-secondary bg-opacity-10 mb-5 py-3">
    <div class="container ">
        <h1>List of Customer Data</h1>
    </div>
</div>

<partial name="_Notification">

@if (Model.Customers != null)
{
    <div class="container" method="get">
        <table class="table-bordered col-md-9">
            <caption>List of users</caption>
            <thead>
                <tr class="bg-primary  text-center">
                    <td>Name</td>
                    <td>DOB</td>
                    <td>Plan</td>

                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model.Customers)
                {
                    <tr>

                        <td>
                            <a href="/Admin/Data/View/@customer.Id">
                                @customer.Name
                            </a>
                        </td>
                        <td>@customer.DOB.Date.ToShortDateString()</td>
                        <td>@customer.Plan</td>

                    </tr>
                }

            </tbody>
        </table>

    </div>
}

else
{
    <div class="container">

        <h1>Customer Data not available</h1>
    </div>
}